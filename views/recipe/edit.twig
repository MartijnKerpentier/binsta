{% extends 'layouts/app.twig' %}

{% block title %}Edit {{ recipe.name }} - Recipes{% endblock %}

{% block content %}
    <div class="text-center p-4">
        <h1 class="text-4xl font-bold mb-4">Edit {{ recipe.name }}</h1>
    </div>

    <form method="post" class="max-w-md mx-auto p-4 bg-white shadow-md rounded-md">
        <div class="mb-4">
            <label for="name" class="block text-gray-700 font-bold mb-2">Recipe Name</label>
            <input type="text" id="name" name="name" class="w-full px-3 py-2 border rounded-md" value="{{ recipe.name }}">
        </div>

        <div class="mb-4">
            <label for="type" class="block text-gray-700 font-bold mb-2">Recipe Type</label>
            <select id="type" name="type" class="w-full px-3 py-2 border rounded-md">
                {% for type in recipe_types %}
                    <option value="{{ type }}" {% if type == recipe.type %}selected{% endif %}>{{ type|capitalize }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="mb-4">
            <label for="level" class="block text-gray-700 font-bold mb-2">Recipe Level</label>
            <select id="level" name="level" class="w-full px-3 py-2 border rounded-md">
                {% for level in recipe_levels %}
                    <option value="{{ level }}" {% if level == recipe.level %}selected{% endif %}>{{ level|capitalize }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="mb-4">
            <label for="kitchen_id" class="block text-gray-700 font-bold mb-2">Kitchen</label>
            <select id="kitchen_id" name="kitchen_id" class="w-full px-3 py-2 border rounded-md">
                {% for kitchen in kitchens %}
                    <option value="{{ kitchen.id }}" {% if kitchen.id == recipe.__get('kitchen').id %}selected{% endif %}>{{ kitchen.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="text-center">
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md">Update Recipe</button>
        </div>
    </form>
{% endblock %}
