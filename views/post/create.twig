{% extends 'layouts/form.twig' %}

{% block title %}
    New Post
{% endblock %}

{% block content %}
	<div class="max-w-screen-md mx-auto">
		<div
			class="bg-white border border-gray-300 rounded-md p-8 shadow-md">
            <form method="post">
                <!-- Code Input -->
                <div class="mb-4">
                    <label for="code" class="block text-gray-700 font-semibold mb-2">Code</label>
                    <textarea id="code" name="code" rows="5" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500"></textarea>
                </div>

                <!-- Language Select -->
                <div class="mb-4">
                    <label for="language" class="block text-gray-700 font-semibold mb-2">Select Language</label>
                    <select id="language" name="language" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
                        {% for language in languages %}
                            <option value="{{ language }}">{{ language }}</option>
                        {% endfor %}
                        <!-- Add more language options as needed -->
                    </select>
                </div>

                <!-- Theme Select -->
                <div class="mb-4">
                    <label for="theme" class="block text-gray-700 font-semibold mb-2">Select Theme</label>
                    <select id="theme" name="theme" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
                        {% for theme in themes %}
                            <option value="{{ theme }}">{{ theme }}</option>
                        {% endfor %}
                        <!-- Add more theme options as needed -->
                    </select>
                </div>

                <!-- Caption Input -->
                <div class="mb-4">
                    <label for="caption" class="block text-gray-700 font-semibold mb-2">Caption</label>
                    <textarea id="caption" name="caption" rows="3" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500"></textarea>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="bg-white text-black px-4 py-2 rounded-md border hover:bg-gray-100 focus:outline-none focus:shadow-outline-blue">
                        Share Post
                    </button>
                </div>
            </form>
		</div>
	</div>
{% endblock %}
