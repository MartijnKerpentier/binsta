{% extends 'layouts/app.twig' %}

{% block title %}Edit {{ kitchen.name }} - Kitchens{% endblock %}

{% block content %}
    <div class="text-center p-4">
        <h1 class="text-4xl font-bold mb-4">Edit {{ kitchen.name }}</h1>
    </div>

    <form method="post" class="max-w-md mx-auto p-4 bg-white shadow-md rounded-md">
        <div class="mb-4">
            <label for="name" class="block text-gray-700 font-bold mb-2">Kitchen Name</label>
            <input type="text" id="name" name="name" class="w-full px-3 py-2 border rounded-md" value="{{ kitchen.name }}">
        </div>

        <div class="mb-4">
            <label for="description" class="block text-gray-700 font-bold mb-2">Kitchen Description</label>
            <textarea id="description" name="description" class="w-full px-3 py-2 border rounded-md">{{ kitchen.description }}</textarea>
        </div>

        <div class="text-center">
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md">Update Kitchen</button>
        </div>
    </form>
{% endblock %}
