{% extends 'layouts/app.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
    <div class="text-center p-4">
        <h1 class="text-4xl font-bold mb-4">Log in to your account</h1>
    </div>

    <form method="post" class="max-w-md mx-auto p-4 bg-white shadow-md rounded-md">
        <div class="mb-4">
            <label for="username" class="block text-gray-700 font-bold mb-2">Username</label>
            <input type="text" id="username" name="username" class="w-full px-3 py-2 border rounded-md">
        </div>

        <div class="mb-4">
            <label for="password" class="block text-gray-700 font-bold mb-2">Password</label>
            <input type="password" id="password" name="password" class="w-full px-3 py-2 border rounded-md">
        </div>

        <div class="text-center">
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md">Log in</button>
        </div>

        {% if error %}
            <div class="mt-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <span class="block sm:inline">{{ error }}</span>
            </div>
        {% endif %}
    </form>
{% endblock %}
